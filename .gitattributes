# Auto detect text files and perform LF normalization
* text=auto

# Python files should always use LF
*.py text eol=lf

# Shell scripts should use LF
*.sh text eol=lf

# Windows files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# TypeScript/JavaScript files use LF
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf

# YAML files use LF
*.yml text eol=lf
*.yaml text eol=lf
